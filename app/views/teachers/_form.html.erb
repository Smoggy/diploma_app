<%= form_for @teacher, remote: true, :authenticity_token => true, html: {class: "form-horizontal center", :id => 'teacher_form'} do |f| %>
   <div class="modal-body">
    <ul class="errors"></ul>
    <fieldset >
 

   
    <div class="control-teacher">
      <%= f.label :first_name, class: "control-label" %>
      <div class="controls">
          <%= f.text_field :first_name%>
      </div>
    </div>

    <div class="control-teacher">
      <%= f.label :last_name, class: "control-label" %>
      <div class="controls">
          <%= f.text_field :last_name %>
      </div>
    </div>

     <div class="control-teacher">
      <%= f.label :email, class: "control-label" %>
      <div class="controls">
          <%= f.text_field :email %>
      </div>
    </div>

     <div class="control-teacher">
      <%= f.label :phone, class: "control-label" %>
      <div class="controls">
          <%= f.text_field :phone %>
      </div>
    </div>


    <div class="control-teacher">
      <%= f.label :is_candidate, class: "control-label" %>
      <div class="controls">
          <%= f.check_box :is_candidate %>
      </div>
    </div>

    <%= f.collection_select :subject_id, @subjects, :id, :name %>

   </div>
  <div class="modal-footer">
    <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
  </div>
  </fieldset>
 
<% end %>